<div id="studentDisplay">
  <div id="buttons">
  <button type="button" name="lowGPA" id="lowGPA" onclick="highlightLow()">Highlight GPA < 2.5</button>
  <button type="button" name="highGPA" id="highGPA" onclick="highlightHi()">Highlight GPA > 2.5</button>
  <button type="button" name="clear" id="clear" onclick="clearMe()">Clear</button>
  <script src="studentScript.js"></script>
  </div>
  <p><div id="favInfo">Hover over a student to view their interest.</div></p>
  <% @students.each do |student| %>
    <div class="studentBox">
      <div  style="height:<%=50+Integer(student.height) %>px;
      width:<%=50+Integer(student.weight) %>px;
      text-align:center;
      color:<%=student.color %>;
      border:2px solid <%=student.color%>;"
      onmouseover="displayFav('<%=student.fav%>', '<%=student.name%>', 0)"
      onmouseout="displayFav('<%=student.fav%>', '<%=student.name%>', 1)">
        <%= student.name %><br>
        <div class='<%=((student.gpa).to_f) < 2.5 %>'><%= student.gpa %></div>
      </div>
    </div>
  <% end %>
</div>
