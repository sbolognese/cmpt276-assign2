<%= render 'header'%>
<div id=tablePortion>
<p id="notice"><%= notice %></p>
<h1>Listing Students</h1>
<table>
    <tr>
      <th>Name</th>
      <th>Height</th>
      <th>Weight</th>
      <th>Color</th>
      <th>GPA</th>
      <th>Favourite Thing</th>
      <th colspan="4"></th>
    </tr>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.height %></td>
        <td><%= student.weight %></td>
        <td><%= student.color %></td>
        <td><%= student.gpa %></td>
        <td><%= student.fav %></td>
        <td><%= link_to 'Show', student %></td>
        <td><%= link_to 'Edit', edit_student_path(student) %></td>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
</table>
  <form id="showMe">

<br>

<%= link_to 'New Student', new_student_path %>
</div>
<%= render 'visualStudents' %>
<button type="button" name="lowGPA" id="lowGPA" onclick="highlightLow()">Highlight GPA < 2.5</button>
<button type="button" name="highGPA" id="highGPA" onclick="highlightHi()">Highlight GPA > 2.5</button>
<button type="button" name="clear" id="clear" onclick="clearMe()">Clear</button>
<script src="studentScript.js"></script>
<%=render 'footer'%>
